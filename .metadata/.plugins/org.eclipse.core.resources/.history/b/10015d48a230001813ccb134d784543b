
public class HW_2_25 {

	public static void main(String[] args) {
/*
다음과 같은 출력이 나오도록 프로그램을 작성하시오.
(1) *********** (2)54321012345
********* 432101234
******* 3210123
***** 21012
*** 101
* 0
*** 101 
***** 21012 
******* 3210123 
********* 432101234 
*********** 54321012345
*/
		int row_num=1;
		int row_star_num=11;
		int current_star_num=1;
		int flag=0;
		
		for(row_num=1;row_num<=11;row_num++)
			for(current_star_num=1;current_star_num<=row_star_num;current_star_num++) {
				System.out.print("*");
			}
			if(row_star_num==1) {
				flag=1;
			}
			if(flag==0) {
				current_star_num=current_star_num-2;
			}
			else {
				current_star_num=current_star_num+2;
			}
			System.out.println();
	}	
}

